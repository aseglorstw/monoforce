Bootstrap: docker
From: ros:noetic-perception

%files
    requirements.txt

%post
    export XDG_CACHE_HOME=/tmp/singularity-cache # pip cache

    # Install Apt packages
    packages="
        gcc
        g++
        bridge-utils
        build-essential
        htop
        net-tools
        screen
        tmux
        vim
        wget
        curl
        git
        sshfs
        mayavi2
        python3-pip
        python3-catkin-tools
        ros-noetic-ros-numpy
        ros-noetic-jsk-rviz-plugins
        ros-noetic-rviz
        ros-noetic-grid-map
        "

    apt update
    apt install -y ${packages}

    # Install python packages
    pip install torch==2.1.0 torchvision==0.16.0 torchaudio==2.1.0 tensorboard --index-url https://download.pytorch.org/whl/cu118
    pip install "git+https://github.com/facebookresearch/pytorch3d.git@stable"
    pip install -r ${SINGULARITY_ROOTFS}/requirements.txt

    ln -s /usr/bin/python3 /usr/bin/python
