<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="config" default="''"/>
    <arg name="img_topics" default="['/camera_fisheye_front/image_color/compressed',
                                     '/camera_left/image_color/compressed',
                                     '/camera_right/image_color/compressed',
                                     '/camera_fisheye_rear/image_color/compressed']"/>
    <arg name="camera_info_topics" default="['/camera_front/camera_info',
                                             '/camera_left/camera_info',
                                             '/camera_right/camera_info',
                                             '/camera_rear/camera_info']"/>
    <arg name="points_topic" default="/points"/>
    <arg name="hm_frame" default="base_link"/>

    <!-- Simulated time -->
    <param name="use_sim_time" value="true"/>

    <!-- Lss node -->
    <node name="lss_dataproc" pkg="monoforce" type="lss_dataproc" output="screen">
        <rosparam subst_value="true">
            img_topics: $(arg img_topics)
            camera_info_topics: $(arg camera_info_topics)
            points_topic: $(arg points_topic)
            hm_frame: $(arg hm_frame)
        </rosparam>
    </node>
</launch>
